{% extends 'baseback.html.twig' %}

{% block title %}Créer un Emploi{% endblock %}

{% block body %}
    {{ parent() }}
<div style="margin-top: 100px;">
    <div class="container mt-5">
        <h1 class="mb-4">Créer un nouvel emploi</h1>

        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate', 'class': 'form-horizontal' } }) }}

        <div class="form-group">
            {{ form_label(form.proprietaire, 'Propriétaire', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.proprietaire, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.proprietaire) }}
        </div>

        <div class="form-group">
            {{ form_label(form.titre, 'Titre', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.titre, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez un titre pour l\'emploi' } }) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Décrivez l\'emploi en détail', 'rows': 5 } }) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-primary' } }) }}
            <a href="{{ path('emploi_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}