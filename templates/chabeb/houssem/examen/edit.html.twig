{# templates/examen/edit.html.twig #}
{% extends 'baseback.html.twig' %}

{% block title %}Modifier l'Examen{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier l'Examen</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.cours, 'Cours', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.cours, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.cours) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.note, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.note) }}
                    </div>


                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('examen_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
