{% extends 'baseProfile.html.twig' %}

{% block title %}Liste des Questions{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Questions</h1>

        {% if examenId is defined and examenId is not null %}
            <div class="mb-4">
                <a href="{{ path('question_new', {'examenId': examenId}) }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Créer une nouvelle question
                </a>
            </div>
        {% endif %}

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Texte</th>
                        <th class="text-center">Type</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for question in questions %}
                        <tr>
                            <td class="text-center">{{ question.texte|default('Non spécifié') }}</td>
                            <td class="text-center">{{ question.type|default('Non spécifié') }}</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="{{ path('reponse_index', {'questionId': question.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Réponses
                                    </a>
                                    <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('question_delete', {'id': question.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucune question trouvée</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}