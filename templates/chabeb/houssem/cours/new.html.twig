{% extends 'baseback.html.twig' %}

{% block title %}Créer un Cours{% endblock %}

{% block body %}
 <div style="margin-top: 100px;">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Créer un nouveau cours</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'required': true}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'required': true}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateDebut, 'Date de Début', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'type': 'datetime-local', 'required': true}}) }}
                    {{ form_errors(form.dateDebut) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateFin, 'Date de Fin', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control', 'type': 'datetime-local', 'required': true}}) }}
                    {{ form_errors(form.dateFin) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.lien, 'Lien du Cours', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lien, {'attr': {'class': 'form-control', 'required': true}}) }}
                    {{ form_errors(form.lien) }}
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="{{ path('cours_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
{% endblock %}

